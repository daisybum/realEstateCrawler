# Weolbu Crawler Environment Variables Example
# Copy this file to .env.crawler and fill in your credentials

# Output settings
WEOLBU_OUTPUT_DIR=output
WEOLBU_JSONL_FILE=weolbu_posts.jsonl
WEOLBU_CHECKPOINT_FILE=checkpoint.json
WEOLBU_DOWNLOAD_DIR=downloads

# URL settings
WEOLBU_BASE_URL=https://weolbu.com
WEOLBU_TAB=100143
WEOLBU_SUBTAB=5

# Credentials (required)
WEOLBU_LOGIN_ID=your_username_here
WEOLBU_LOGIN_PW=your_password_here

# Browser settings
WEOLBU_USER_AGENT=Mozilla/5.0 (WeolbuCrawler/0.5)
WEOLBU_BROWSER_HEADLESS=true

# Request settings
WEOLBU_REQUEST_TIMEOUT=20
WEOLBU_WAIT_AFTER_LOGIN=5
WEOLBU_WAIT_PAGE_LOAD=3
WEOLBU_WAIT_BETWEEN_PAGES=1

# Rate limiting
WEOLBU_RATE_LIMIT_ENABLED=true
WEOLBU_RATE_LIMIT_REQUESTS=5
WEOLBU_RATE_LIMIT_PERIOD=10

# Retry settings
WEOLBU_MAX_RETRIES=3
WEOLBU_RETRY_DELAY=5
